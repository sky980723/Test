<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.star.dao.IndexDao">
	<resultMap type="com.example.star.entity.PublicityApp"
		id="PublicityAppMap">
		<result column="id" property="id" />
		<result column="type" property="type" />
		<result column="introduce" property="introduce" />
		<result column="img_url" property="imgUrl" />
		<result column="img_describe" property="imgDescribe" />
		<result column="video_url" property="videoUrl" />
		<result column="video_describe" property="videoDescribe" />
		<result column="addtime" property="addtime" />
		<result column="updatetime" property="updatetime" />
	</resultMap>
	
	<!-- 按type查询  -->
	<select id="listPublicity" resultMap="PublicityAppMap">
		select * from publicity_app where type = #{type}
		order by addtime desc
	</select>
</mapper>